extends layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Code Entry 
                p Last step. Please enter the verification code sent to your email address.
                div.signup-wall
                    form(class='form-code-entry', action='/code-entry', method='POST')
                        input(type='number', name='code', class='form-control', placeholder='',required)

                        #message
                            if message
                                p.text-center.error-message #{message}

                        button(class='btn btn-lg btn-primary btn-block', type='submit') Submit 
                        span.clearfix
